<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_nav_graph"
    app:startDestination="@id/gameFragment"
    >

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game"
        >
        <action
            android:id="@+id/action_gameFragment_to_winFragment"
            app:destination="@id/winFragment"
            />
        <action
            android:id="@+id/action_gameFragment_to_loseFragment"
            app:destination="@id/loseFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/winFragment"
        android:name="com.example.game.WinFragment"
        android:label="fragment_win"
        tools:layout="@layout/fragment_win"
        >

        <!-- Navigate back to the app module graph -->
        <action
            android:id="@+id/action_winFragment_to_out_of_game"
            app:popUpTo="@id/game_nav_graph"
            />

    </fragment>
    <fragment
        android:id="@+id/loseFragment"
        android:name="com.example.game.LoseFragment"
        android:label="fragment_lose"
        tools:layout="@layout/fragment_lose"
        >

        <!-- Navigate back to the app module graph -->
        <action
            android:id="@+id/action_loseFragment_to_out_of_game"
            app:popUpTo="@id/game_nav_graph"
            />

    </fragment>
</navigation>